{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("tungsten\\tungsten\\assetbundles\\tungsten\\TungstenAsset") %}

{{ forms.textField({
    label: 'Training Videos URL',
    instructions: 'Provide the YouTube video playlist URL. Leave blank to hide the link on Dashboard.',
    id: 'tcgTrainingVideosUrl',
    name: 'tcgTrainingVideosUrl',
    value: settings.tcgTrainingVideosUrl})
}}

{{ forms.textareaField({
    label: 'Notes from Tungsten',
    instructions: 'Input the system-wide notes here. You can use [markdown](http://daringfireball.net/projects/markdown/basics) for formatting purposes.',
    id: 'tcgNotes',
    class: 'tcg-notes redactor',
    name: 'tcgNotes',
    value: settings.tcgNotes})
}}

<style type="text/css">
    textarea.text.tcg-notes {
        min-height: 300px;
    }
</style>
